<h1>Listing all articles</h1>
<p>
  <%= link_to "Creat new article", new_article_path %>
</p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @article.each do |article| %>
  <tr>
    <td class="title"><%= link_to article.title, article %></td>
    <td class="body"><%= truncate(article.description, length:100) %></td>
    <td class="title"><%= link_to 'Edit', edit_article_path(article) %></td>
    <td class="title"><%= link_to 'Show', article_path(article) %></td>
    <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
  <% end %>
</table>